<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hello.joyce.test.Choose"
    tools:showIn="@layout/activity_choose"
    android:contextClickable="true"
    android:background="#FFF8D7">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:id="@+id/btn_phone"
        android:background="@drawable/phone"
        android:onClick="true"
        android:layout_below="@+id/tv_choose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btn_watch"
        android:background="@drawable/smartwatch"
        android:onClick="true"
        android:layout_below="@+id/btn_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="請選擇復健工具"
        android:id="@+id/tv_choose"
        android:textColor="#820f12"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
